<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!--        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14</item>-->
        <item name="dragIcon">@drawable/ic_drag</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:colorAccent">@color/lightGray</item>
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="backgroundColor">@android:color/black</item>
        <item name="background">@android:color/black</item>
        <item name="android:selectableItemBackground">@drawable/item_bg_selector</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="snackbarStyle">@style/CustomSnackbar</item>
        <item name="colorSurface">@android:color/black</item>

        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- remove preference activity background color -->
    <!--    <style name="PreferenceThemeOverlay.v14">-->
    <!--        <item name="android:windowBackground">@null</item>-->
    <!--    </style>-->

    <style name="TouchAreaDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/background_with_border</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/lightGray</item>
        <item name="backgroundTint">@android:color/black</item>
    </style>

    <style name="CustomSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:elevation">0dp</item>
        <!-- Set the custom background color -->
        <item name="android:background">@drawable/background_with_border</item>
        <!-- Set the custom text color -->
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>