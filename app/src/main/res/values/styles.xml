<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="TransparentActivity" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:forceDarkAllowed">true</item>
        <!--        <item name="preferenceTheme">@style/preferenceTheme</item>-->
        <item name="dragIcon">@drawable/ic_drag</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:colorAccent">@android:color/black</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="android:selectableItemBackground">@drawable/item_bg_selector</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="snackbarStyle">@style/CustomSnackbar</item>
        <item name="colorSurface">@android:color/white</item>

        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- remove preference activity background color -->
    <!--    <style name="preferenceTheme" parent="PreferenceThemeOverlay.v14">-->
    <!--        <item name="android:windowBackground">@null</item>-->
    <!--    </style>-->

    <style name="TouchAreaDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="android:windowBackground">@drawable/background_with_border</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="CustomSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:elevation">0dp</item>
        <!-- Set the custom background color -->
        <item name="android:background">@drawable/background_with_border</item>
        <!-- Set the custom text color -->
        <item name="android:textColor">@android:color/black</item>
        <item name="colorOnSurface">@android:color/black</item>
    </style>
</resources>