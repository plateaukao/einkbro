<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:klyph="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/setting_title_behavior">

        <CheckBoxPreference
            android:defaultValue="false"
            android:icon="@drawable/icon_close"
            android:key="sp_close_tab_confirm"
            android:title="@string/setting_title_confirm_tab_close"
            android:summary="@string/setting_summary_confirm_tab_close" />

        <CheckBoxPreference android:key="sp_reopenLastTab"
            android:icon="@drawable/icon_tab_plus"
            android:defaultValue="false"
            android:title="@string/setting_title_reopenLastTab"
            android:summary="@string/setting_summary_reopenLastTab"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_title_theme">

        <ListPreference
            android:icon="@drawable/icon_size"
            android:key="sp_fontSize"
            android:defaultValue="100"
            android:title="@string/setting_title_font"
            android:summary="@string/setting_summary_font"
            android:entries="@array/setting_entries_font"
            android:entryValues="@array/setting_values_font"/>

        <de.baumann.browser.view.sortlistpreference.MultiSelectDragListPreference
            android:icon="@drawable/ic_toolbar"
            android:key="sp_toolbar_icons"
            android:defaultValue="@array/default_toolbar_icons"
            android:title="@string/setting_title_toolbar_icons"
            android:dialogTitle="@string/setting_title_toolbar_icons"
            android:summary="@string/setting_summary_toolbar_icons"
            klyph:entries="@array/setting_entries_toolbar_icons"
            klyph:entryValues="@array/setting_values_toolbar_icons"
            klyph:entryIconIds="@array/setting_ids_toolbar_icons"
            />

        <CheckBoxPreference android:key="sp_desktop"
            android:icon="@drawable/icon_desktop"
            android:defaultValue="false"
            android:title="Desktop mode"
            android:summary="@string/setting_summary_desktop"/>

        <CheckBoxPreference android:key="sp_bold_font"
            android:icon="@drawable/icon_size"
            android:defaultValue="false"
            android:title="@string/bold_font"
            android:summary="@string/setting_summary_bold_font"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_title_toolbar">

        <CheckBoxPreference
            android:key="hideToolbar"
            android:icon="@drawable/icon_fullscreen"
            android:defaultValue="true"
            android:title="@string/setting_title_hideToolbar"
            android:summary="@string/setting_summary_hide"/>

        <CheckBoxPreference android:key="sp_toolbarShow"
            android:icon="@drawable/icon_show"
            android:defaultValue="false"
            android:title="@string/setting_title_toolbarShow"
            android:summary="@string/setting_summary_toolbarShow"/>

        <ListPreference
            android:title="@string/setting_title_nav_pos"
            android:icon="@drawable/icon_arrow_expand"
            android:summary="@string/setting_summary_nav_pos"
            android:key="nav_position"
            android:defaultValue="0"
            android:entries="@array/setting_entries_nav_pos"
            android:entryValues="@array/setting_values_nav_pos" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_overView">

        <CheckBoxPreference android:key="start_tabStart"
            android:icon="@drawable/icon_refresh"
            android:defaultValue="false"
            android:title="@string/setting_overView_onStart_title"
            android:summary="@string/setting_overView_onStart_summary"/>

        <ListPreference
            android:title="@string/setting_overView"
            android:icon="@drawable/icon_preview"
            android:summary="@string/setting_summary_tab"
            android:key="start_tab"
            android:defaultValue="0"
            android:entries="@array/setting_entries_tab"
            android:entryValues="@array/setting_values_tab" />

    </PreferenceCategory>

</PreferenceScreen>