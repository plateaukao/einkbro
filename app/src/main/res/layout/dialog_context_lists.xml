                            android:padding="8dp"
                            android:textColor="@color/colorLight"
                            android:textSize="60sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            android:text="2" />

                        <ImageView
                            android:id="@+id/context_2_preView"
                            android:layout_width="175dp"
                            android:layout_height="100dp"
