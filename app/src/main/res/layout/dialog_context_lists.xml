                            android:padding="8dp"
                            android:scaleType="center"
                            android:background="@color/colorDark_trans2"
                            android:src="@drawable/custom_button" />

                        <TextView
                            android:layout_width="175dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
